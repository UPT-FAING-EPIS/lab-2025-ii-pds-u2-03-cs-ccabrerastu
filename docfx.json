{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "ATM/ATM.Domain",
          "files": [
            "ATM.Domain.csproj"
          ]
        }
      ],
      "dest": "api/ATM.Domain"
    },
    {
      "src": [
        {
          "src": "Payment/Payment.Domain",
          "files": [
            "Payment.Domain.csproj"
          ]
        }
      ],
      "dest": "api/Payment.Domain"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "ATM & Payment App",
      "_appTitle": "ATM & Payment App",
      "_enableSearch": true,
      "pdf": true
    }
  }
}